{
  "parser": "babel-eslint",
  "rules": {
    "indent": [
        2,
        2
    ],
    "quotes": [
        2,
        "double"
    ],
    "linebreak-style": [
        2,
        "unix"
    ],
    "semi": [
        2,
        "never"
    ],
    "no-var" : 2,
    "no-undef" : 1,
    "prefer-arrow-callback": 2,
    "prefer-const": 1
  },
  "globals": {
    "Backbone": true,
    "_": true,
    "jQuery": true,
    "$": true,
    "app": true,
    "validator": true
  },
  "env": {
    "es6": true,
    "browser": true
  },
  "extends": "airbnb"
}
