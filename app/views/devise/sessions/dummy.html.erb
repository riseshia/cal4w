<div class="row">
  <div class="col-xs-12">
    <h2>Log in</h2>
  </div>
</div>

<div class="row">
  <div class="col-xs-12">
    <%= form_tag user_session_path, id: "users_sign_in" do %>
      <div class="field">
        <p><%= label_tag :nickname_on_slack %></p>
        <div class="form-group input-group has-feedback" id="nickname-form">
          <%= text_field_tag :nickname, nil, placeholder: "weirdmeetup", class: "form-control", required: true %>
          <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
          <div id="nickname-help" class="help-block with-errors"></div>
        </div>
      </div>
      <div class="actions">
        <%= submit_tag "Send link to verify", class: "btn btn-danger btn-lg" %>
      </div>
    <% end %>
  </div>
</div>

<% render "devise/shared/links" %>